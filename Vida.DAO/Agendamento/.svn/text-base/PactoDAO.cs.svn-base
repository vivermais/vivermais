        T IPacto.BuscarPactoPorMunicipio<T>(string id_municipio)
        {
            string hql = String.Empty;
            hql += "from Vida.Model.Pacto pacto";
            hql += " where pacto.Municipio.Codigo=" + id_municipio;
            return Session.CreateQuery(hql).UniqueResult<T>();
        }

