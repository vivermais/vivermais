        protected void CarregaCampos() 
        {
            int co_distrito = Factory.GetInstance<IUsuarioDistritoFarmacia>().BuscarDistritoPorUsuario<int>(((Vida.Model.Usuario)Session["Usuario"]).Codigo);
            IList<Vida.Model.EstabelecimentoSaude> estabelecimentos = Factory.GetInstance<IEstabelecimentoSaude>().BuscarUnidadeDistrito<Vida.Model.EstabelecimentoSaude>(co_distrito);     

            //constroi a lista de todas as farmacias dos estabelecimentos do distrito do usuário logado
            IList<Vida.Model.Farmacia> farmacias = new List<Vida.Model.Farmacia>();
            foreach ( Vida.Model.EstabelecimentoSaude es in estabelecimentos)
            {
                IList<Vida.Model.Farmacia> lf = Factory.GetInstance<IFarmacia>().BuscarPorEstabelecimentoSaude<Vida.Model.Farmacia>(es.CNES);
                foreach (Vida.Model.Farmacia f in lf) 
                    farmacias.Add(f);
            }
            ddlFarmacia.Items.Add(new ListItem("Selecione...", "0"));
            foreach (Vida.Model.Farmacia f in farmacias)
                ddlFarmacia.Items.Add(new ListItem(f.Nome, f.Codigo.ToString()));
        }

